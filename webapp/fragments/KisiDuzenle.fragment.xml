<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>

    <Dialog id="_IDGenDialog1">
        <customHeader>
            <Bar id="_IDGenBar1">
                <contentMiddle>
                    <Label id="_IDGenLabel1" text="Kişi Düzenle"/>
                </contentMiddle>
                <contentRight>
                    <Button id="_IDGenButton1" icon="sap-icon://decline" press="onCloseDialog3"/>
                </contentRight>
            </Bar>
        </customHeader>
        <VBox id="_IDGenVBox1" >         
            <Label id="_IDGenLabel2" text="Ad:" />
            <Input id="_IDGenInput1" value="{kisi>/KisiAd}"/>
            <Label id="_IDGenLabel3" text="Soyad:"/>
            <Input id="_IDGenInput2" value="{kisi>/KisiSoyadi}"/>
            <Label id="_IDGenLabel4" text="Yas:" />
            <Input id="_IDGenInput3" value="{kisi>/Yas}"
            />
        </VBox>
        <beginButton>
            <Button id="idDuzenleButton" text="DÜZENLE" press="onDuzenle" type="Accept"/>
        </beginButton>
    </Dialog>

</core:FragmentDefinition>